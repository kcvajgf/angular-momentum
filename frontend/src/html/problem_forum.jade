#forum.container
  h3 Problem {{problem.index}} Forum
  a.btn.btn-link(ng-href="#/problems?#") Back to Problems
  div(ng-show="loadingProblem")
    i.icon-spinner.icon-spin
    |  Loading  
  div(ng-hide="loadingProblem")
    div(ng-repeat="post in posts | orderBy: 'created_at'")
      div(mm-post="post")
    div(mm-make-post, save="makePost(content)")
