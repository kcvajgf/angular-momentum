#threads.container
  h3 All Threads
  .loading
    | &nbsp;
    span(ng-show="loading")
      i.icon-spinner.icon-spin
      |  Loading
  .listing
    .threads-title
      .row-fluid
        .span5 Thread
        .span1 
        .span3 Created
        .span3 Last Message
    .row-fluid.threads-listing(ng-repeat="thread in threads | orderBy: '-last_updated'")
      .span5
        a(ng-href="/#/threads/{{thread.id}}?#") {{thread.subject}}
        span(ng-hide="hasRead(thread)")
          | &nbsp;
          i.icon-file-alt
        br
        span(ng-repeat="name in names(thread)")
          span(ng-hide="$first || $last") , 
          span(ng-show="!$first && $last")  and 
          span.author {{name}}
      .span1.message-count
        span(ng-show="thread.messages.length > 1")
          {{thread.messages.length}} posts 
      .span3 
        | {{thread.created|date:"medium"}} 
        br
        span(ng-show="thread.author")  by 
          span.author  {{thread.author}}
      .span3
        | {{thread.last_message|date:"medium"}} 
        br
        span(ng-show="thread.last_message_author")  by
          span.author  {{thread.last_message_author}}
