#problems.container
  h3 Problems
  div(ng-repeat="problem in upcomingProblems | orderBy: 'index'", mm-upcoming="problem")
  label.checkbox(ng-show="CurrentUser.user.is_admin")
    input(type="checkbox", ng-model="showInactive")
    | Show Inactive
  div(ng-hide="problems.length")
    i.icon-spinner.icon-spin
    |  Loading
  table.table
    tr
      th #
      th Title
      th Solved
      th Solvers
      th Last Post
    tr(ng-repeat="problem in problems | filter: problemFilter | orderBy: 'index'")
      td {{problem.index}}
      td
        a(ng-click="setProblem(problem)") {{problem.title}}
      td.text-success
        i.icon-ok(ng-show="problem.has_answered")
      td
        a(ng-href="#/problems/{{problem.index}}/scoreboard?#")
          {{problem.solve_count || 0}}
      td
        a(ng-href="#/problems/{{problem.index}}/forum?#", ng-show="CurrentUser.user.is_admin || problem.has_answered") 
         | Go to forum
        // display last post
