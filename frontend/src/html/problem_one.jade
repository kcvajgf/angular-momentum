#problems.container
  h3 Problems
  div(ng-repeat="problem in upcomingProblems | orderBy: 'index'", mm-upcoming="problem")
  label.checkbox(ng-show="CurrentUser.user.is_admin")
    input(type="checkbox", ng-model="showInactive")
    | Show Inactive
  div(ng-hide="problems.length")
    i.icon-spinner.icon-spin
    |  Loading
  .tabbable.tabs-left
    ul.nav.nav-tabs
      li.problem-tab(ng-repeat="problem in problems | filter: problemFilter | orderBy: 'index'", ng-class="{active: problem.index == currentIndex}")
        a(ng-click="setProblem(problem)") {{problem.index}}
          span(ng-show="!problem.active") *
    .tab-content
      div(mm-problem="currentProblem", attempt="attempt(currentProblem, answer)")
